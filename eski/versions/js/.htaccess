# CORS Headers - Tüm sitelere izin ver
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header set Access-Control-Allow-Credentials "true"
</IfModule>

# Video MIME Types
<IfModule mod_mime.c>
    AddType video/mp4 .mp4 .m4v
    AddType video/webm .webm
    AddType video/ogg .ogg .ogv
    AddType video/x-msvideo .avi
    AddType video/quicktime .mov
    AddType video/x-matroska .mkv
    AddType video/mp2t .ts
    AddType application/x-mpegURL .m3u8
</IfModule>

# Altyazı MIME Types
<IfModule mod_mime.c>
    AddType text/vtt .vtt
    AddType application/x-subrip .srt
    AddType text/plain .srt .sub .ssa .ass
</IfModule>

# Cache Control (Hız için)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType video/mp4 "access plus 1 month"
    ExpiresByType video/webm "access plus 1 month"
</IfModule>

# Gzip Compression (İsteğe bağlı)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/vtt
    AddOutputFilterByType DEFLATE application/x-subrip
</IfModule>

# Directory Listing Kapat (Güvenlik)
Options -Indexes

